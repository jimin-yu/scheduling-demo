<h1>calendar</h1>
<div id='calendar'></div>

<% content_for :stylesheet do %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.2/main.min.css">
    <style>
        .fc-daygrid-dot-event {
            color: red;
            padding: 10px 0;
        }
    </style>
<% end %>

<% content_for :javascript do %>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.2/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.2/locales-all.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                timeZone: 'local',
                locale: 'kr',
                initialView: 'dayGridMonth',
                events: function(info, successCallback, failureCallback) {
                    $.ajax({
                        type: "GET",
                        url: '/schedule/events', 
                        data: {start_date: info.start.valueOf(), end_date: info.end.valueOf()},
                        success: function(result){
                            event_array = result.data.map(function(event){
                                return {
                                    start: `${event.date}T${event.time||'22:00'}:00`,
                                    allDay: false,
                                    color: event.enabled ? 'blue' : 'red'
                                }
                            })
                            successCallback(event_array);
                        }
                    })
                },
                eventClick: function(info) {
                    // console.log(info.event.start)
                    // console.log(info.event.allDay)
                    // change the border color just for fun
                    info.el.style.borderColor = 'red';
                }
            });
            calendar.render();
        });

        // function params(info){
        //     $.param({
        //         start: info.start.valueOf(),
        //         end: info.end.valueOf()
        //     })
        // }

    </script>
<% end %>